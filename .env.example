AHA_DOMAIN=               # e.g. "mycompany" for mycompany.aha.io
AHA_API_TOKEN=             # API key from Aha Settings > Personal > Developer
AHA_DEFAULT_PRODUCT_ID=    # Optional: auto-select product on load
AHA_TEAM_PRODUCT_ID=       # Optional: Aha Develop workspace ID for iterations
DATABASE_URL=file:./data/aha-smt.db
CACHE_TTL_SECONDS=60

# === Organization Configuration (optional - also configurable in Settings UI) ===

# Backlog filtering strategy
# Options: "release" | "team_location" | "epic" | "tag" | "custom_field"
# BACKLOG_FILTER_TYPE=release

# Required if BACKLOG_FILTER_TYPE=team_location
# Your Aha! Develop product ID (find in URL when viewing product)
# BACKLOG_TEAM_PRODUCT_ID=7504415798145038653

# Required if BACKLOG_FILTER_TYPE=tag — tag name to filter by (case-insensitive)
# BACKLOG_TAG_FILTER=frontend

# Required if BACKLOG_FILTER_TYPE=epic — epic reference number
# BACKLOG_EPIC_ID=PRJ-E-1

# Exclude workflow kinds from estimation (comma-separated)
# BACKLOG_EXCLUDE_WORKFLOW_KINDS=Bug,Test

# Points source priority (comma-separated, first non-null wins)
# Options: original_estimate, score, work_units
# POINTS_SOURCE=original_estimate,score

# Valid point values for estimation UI (comma-separated numbers)
# POINTS_SCALE=1,2,3,5,8,13,21

# Default story points per team member per day
# POINTS_DEFAULT_PER_DAY=1

# Sprint tracking mode
# Options: "iterations" | "releases" | "both"
# SPRINTS_MODE=both

# Default tab when SPRINTS_MODE=both
# Options: "iterations" | "releases"
# SPRINTS_DEFAULT_VIEW=iterations

# Aha internal meanings that count as complete (comma-separated)
# WORKFLOW_COMPLETE_MEANINGS=DONE,SHIPPED

# Estimation matrix as JSON (advanced, overrides database matrix)
# ESTIMATION_MATRIX={"L-L-L":1,"L-L-M":2,"L-M-L":2,...}
